<body>
    <div id='tabuleiro'></div>
    <script>
        casas = 8
        for (i = 0; i < casas; i++) {
            for (j = 0; j < casas; j++) {
                if (i % 2 == 0) {
                    tabuleiro.innerHTML += "<div class='linha-par'></div>"
                } else {
                    tabuleiro.innerHTML += "<div class='linha-impar'></div>"
                }
            }
        }
    </script>
