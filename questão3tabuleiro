        #tabuleiro div.linha-par:nth-child(2n+1) {
            background-color: #f0dab5
        }
        #tabuleiro div.linha-impar:nth-child(2n) {
            background-color: #f0dab5
        }
        #tabuleiro div.linha-impar:nth-child(2n+1) {
            background-color: #b58763
        }
        #tabuleiro div.linha-impar:nth-child(2n) {
            background-color: #f0dab5
